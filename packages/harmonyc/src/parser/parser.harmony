
+ production "ACTION"
  + | hello
    =>
    | hello

  + | hello "John"
    =>
    | hello "John"
    
  + | | asdf
    =>
    | | asdf

  + | 
    | | asdf
    =>
    | | asdf

  + string only:
    + | "hello"
      =>
      | "hello"

  + special characters:
    + | :
      => !! | Unable to consume token: :
    + | a-b
      =>
      | a-b

    + | a - b
      =>
      | a - b

    + | a "" - b
      =>
      | a "" - b

    + | a `3` +b
      =>
      | a `3` +b
      
    + | :b
      =>
      | :b

    + | a+b
      =>
      | a+b

    + | a + b
      =>
      | a + b
       
    + | a: b
      =>
      | a: b

    + | a : b
      =>
      | a : b

    + | a=b
      =>
      | a=b

    + | a = b
      =>
      | a = b
    
    + set variable:
      + | ${var} "hello"
        =>
        | ${var} "hello"


+ production "RESPONSE_ITEM"
  + | => hello
    =>
    | => hello

  + | => "Jon"
    =>
    | => "Jon"

  + | => | asdf
    =>
    | => | asdf

  + variable:
    + | => ${var}
      => instance of "Response"
      => has "saveToVariable" ${x}
      => "${x}" is | ${var}
      =>
      | => ${var}
    + | => score ${var}
      => instance of "Response"
      => has "saveToVariable" ${x}
      => "${x}" is | ${var}
      =>
      | => score ${var}

  + newline after "=>":
    + | => 
      | | asdf
      =>
      | => | asdf

    + | =>
      | | asdf
      =>
      | => | asdf
  
  + error response:
    + | => !!
      => instance of "ErrorResponse"
      =>
      | => !!

    + | => !! "invalid"
      =>
      | => !! "invalid"

    + | => !! | Could not
      =>
      | => !! | Could not

+ production "TEST_DESIGN"
  + | + hello
    => | + hello
  + "+ hello => world"    => | + hello => world
  + "+ hello\n  => world" => | + hello => world
  + empty action:
    + | + => response only
      => | +  => response only

  + requirements:
