{
  "compilerOptions": {
    "target": "ES2019",
    "lib": ["ES2019"],
    "module": "ES2022",
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "noEmit": false,
    "strict": true,
    "rewriteRelativeImportExtensions": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["**/*.test.*", "**/*.spec.*", "**/*.phrases.*"]
}
