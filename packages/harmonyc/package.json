{
  "name": "harmonyc",
  "version": "0.19.0",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "harmonyc": "tsx ./src/cli/cli",
    "test": "vitest --run",
    "test:compile": "tsx ./src/cli/cli 'src/**/*.harmony'",
    "dev": "vitest --watch",
    "release": "release publish",
    "publish": "(cd dist && npm version --allow-same-version $(node -p 'require(\"../package.json\").version')) && rm -rf dist/*/ dist/*.js && npm run build && npm run test && cp -f ../../README.md ../../LICENSE dist/ && cd dist && npm publish"
  },
  "files": [
    "dist"
  ],
  "exports": {
    "./vitest": {
      "types": "./dist/vitest/index.d.ts",
      "default": "./dist/vitest/index.js"
    }
  },
  "bin": {
    "harmonyc": "./dist/cli/cli.js"
  },
  "dependencies": {
    "fast-glob": "^3.3.2",
    "tinyrainbow": "1",
    "ts-morph": "^27.0.2",
    "typescript-parsec": "0.3.4"
  },
  "optionalDependencies": {
    "watcher": "^2.3.1"
  },
  "devDependencies": {
    "@ossjs/release": "^0.10.0",
    "@types/debug": "^4.1.12",
    "@types/node": "^22.10.6",
    "expect": "^29.7.0",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vite": "^7.1.10",
    "vitest": "^3.2.4"
  }
}