{
  "name": "harmony-code",
  "publisher": "harmony-ac",
  "displayName": "Harmony Code",
  "description": "Language support for the Harmony Code language",
  "version": "0.19.1",
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:harmony"
  ],
  "scripts": {
    "build": "tsx ./tools/build_textmate.ts && vite build",
    "watch": "vite build --watch",
    "compile": "vite build",
    "publish:major": "npm version major && npm run publish",
    "publish:minor": "npm version minor && npm run publish",
    "publish:patch": "npm version patch && npm run publish",
    "publish": "npm run build && vsce pack && vsce publish"
  },
  "files": [
    "out",
    "syntaxes",
    "language-configuration.json",
    "LICENSE.md"
  ],
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/harmony-ac/harmony-code",
    "directory": "/vscode-ext"
  },
  "contributes": {
    "breakpoints": [
      {
        "language": "harmony"
      }
    ],
    "languages": [
      {
        "id": "harmony",
        "aliases": [
          "Harmony",
          "harmony"
        ],
        "extensions": [
          ".harmony"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "harmony",
        "scopeName": "source.harmony",
        "path": "./syntaxes/harmony.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "harmony.restartLanguageServer",
        "title": "Restart Harmony Language Server",
        "category": "Harmony"
      }
    ]
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.74.0",
    "tsx": "^4.19.2",
    "typescript": "^5.3.0",
    "vite": "^7.3.1"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
